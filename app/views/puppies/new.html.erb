<h1>Puppy Form</h1>
<%= form_with model: @puppy, url: puppies_path, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, id: "name" %>
  </div>

  <div>
   <%= form.label :breed %>
    <%= form.text_field :breed, id: "breed"%>
  </div>

  <div>
   <%= form.label :age %>
    <%= form.text_field :age, id: "age"%>
  </div>
  
   <%= form.submit "submit" %>
<% end %>
